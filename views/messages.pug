html
	head
		title Messages
		link(href='/src/css/materialize.min.css' type ='text/css' rel='stylesheet')
		link(href='/src/custom.css' type ='text/css' rel='stylesheet')
	body
		script(src='src/js//jquery-3.1.1.min.js')
		script(src='src/js/materialize.min.js')
		script(src='src/custom.js')


	nav
		div(class="nav-wrapper")
			a(href="#" class="brand-logo") BLOGGG
			ul(id="nav-mobile" class="right hide-on-med-and-down")
				li: a(href="/") Home
				li: a(href="/profile") Profile
				li: a(href="/messages") Messages

	div.container
		each post in messages
			div(class="row")
				div(class="col s12 m12")
					div(class="card blue-grey darken-1")
						div(class="card-content white-text")
							span(class="card-title") Title: #{post.title}
							p Message: #{post.body}
							p.white-text Post created by: #{post.user.firstName} #{post.user.lastName}
					.row
						.div(class="commentss")
							if post.comments
								each comment in post.comments
									p Comment: #{comment.comment}. By #{comment.firstName}

						form(class='col.s12' id=post.id, data-userId="post.user.id", method='post' action='comment')
							.input-field.col.m8
								textarea(class="postcomment materialize-textarea" placeholder='Please leave a comment' name='comment')
							.col.m2
							.col.m2
								.row
								.row
								.row
									button.btn.btn-large.waves-effect.waves-light(type='submit', name='action') Submit