	.container
		.row
			.col.m6
				h2.center-aling Register here
				.row
					form(class='col.s12' method='post')
						.row
							.input-field.col.s6
								input(placeholder='First name' id="first_name2" type="text" class="validate" name='singup_firstname')
							.input-field.col.s6
								input(placeholder='Last name' id="first_name2" type="text" class="validate" name='singup_lastname')
						.row
							.input-field.col.s12
								input(placeholder='Email' id="first_name2" type="email" class="validate" name='singup_email')
						.row
							.input-field.col.s12
								input(placeholder='Password' id="first_name2" type="password" class="validate" name='signup_password')
						.row
							.input-field.col.s12
								input(placeholder='Password again' id="first_name2" type="password" class="validate" name='sigup_password')
						.row
							.col.s12
						.row
							.col.m12
								p.right-align
									button.btn.btn-large.waves-effect.waves-light(type='submit', name='action') Register
			.col.m6
				h2.center-align Or Login
				.row
					form(class='col.s12' method='post')
						.row
							.input-field.col.s12
								input(placeholder='Email' id="first_name2" type="text" class="validate" name='login_email')
						.row
							.input-field.col.s12
								input(placeholder='Password' id="first_name2" type="text" class="validate" name='login_password')
						.row
							.col.s12
								input#remember(type='checkbox')
								label(for='remember') Remember me
						.row
							.col.m12
								p.right-align
									button.btn.btn-large.waves-effect.waves-light(type='button', name='action') Login
